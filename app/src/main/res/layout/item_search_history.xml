<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <ImageView
        android:id="@+id/home_search_history_item_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:src="@mipmap/ic_history" />

    <TextView
        android:id="@+id/home_search_history_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/home_search_history_item_image"
        android:text="我是关键字"
        android:textColor="@color/home_author_gray"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/home_search_history_item_delete"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:src="@mipmap/ic_delete" />

    <View
        android:id="@+id/home_search_history_item_divide"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/home_search_history_item_delete"
        android:layout_toEndOf="@+id/home_search_history_item_image"
        android:background="@color/home_divide_gray" />

</RelativeLayout>