<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="15dp">

        <TextView
            android:id="@+id/home_item_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="4dp"
            android:background="@drawable/bg_home_item_new"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:text="@string/home_item_new"
            android:textColor="@color/blue"
            android:textSize="12sp"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/home_item_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/home_item_new"
            android:textColor="@color/home_author_gray"
            android:textSize="13sp"
            tools:text="作者" />

        <TextView
            android:id="@+id/home_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@color/home_author_gray"
            android:textSize="13sp"
            tools:text="发布时间" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="15dp">

        <ImageView
            android:id="@+id/home_item_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="5dp"
            tools:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

             <TextView
                android:id="@+id/home_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="15sp"
                tools:text="我是标题我是标题我是标题我是标题我是标题我是标题我是标题我是标题我是标题我是标题我是标题我是标题我是标题我是标题我是标题我是标题" />

            <TextView
                android:id="@+id/home_item_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:textColor="@color/home_author_gray"
                android:textSize="13sp"
                tools:text="我是描述我是描述我是描述我是描述我是描述我是描述我是描述我是描述我是描述我是描述我是描述我是描述我是描述我是描述我是描述我是描述我是描述我是描述" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="15dp">

        <TextView
            android:id="@+id/home_item_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:background="@drawable/bg_home_item_top"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:text="@string/home_item_top"
            android:textColor="@color/red"
            android:textSize="12sp"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/home_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@id/home_item_top"
            android:background="@drawable/bg_home_item_type"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textColor="@color/home_top_green"
            android:textSize="12sp"
            tools:text="问答" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/home_item_type"
            android:gravity="center">

            <TextView
                android:id="@+id/home_item_super_character"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/home_author_gray"
                android:textSize="12sp"
                tools:text="干货资源" />

            <View
                android:id="@+id/home_item_dot"
                android:layout_width="2dp"
                android:layout_height="2dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:background="@drawable/bg_gray_circle" />

            <TextView
                android:id="@+id/home_item_character"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/home_author_gray"
                android:textSize="12sp"
                tools:text="课程推荐" />
        </LinearLayout>

        <ImageView
            android:id="@+id/home_item_collect"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_alignParentEnd="true"
            tools:src="@mipmap/ic_collect" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        android:background="@color/home_divide_gray" />


</LinearLayout>