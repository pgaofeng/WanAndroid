<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <TextView
        android:id="@+id/item_todo_priority"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/bg_priority_high"
        android:gravity="center"
        android:text="1" />

    <TextView
        android:id="@+id/item_todo_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/item_todo_priority"
        android:text="我是标题"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/item_todo_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_home_item_top"
        android:text="分类"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/item_todo_leaveTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="22天" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/item_todo_leaveTime"
        android:text="剩余：" />

    <TextView
        android:id="@+id/item_todo_targetTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_todo_leaveTime"
        android:layout_alignParentEnd="true"
        android:text="2018-8-8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_todo_targetTime"
        android:layout_toStartOf="@id/item_todo_targetTime"
        android:text="预计完成日期：" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/item_todo_type"
        android:background="@color/home_divide_gray" />

</RelativeLayout>